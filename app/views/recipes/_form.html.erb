<%= form_for @recipe do |f| %>
      Recipe Title: <%= f.text_field :title %>
      <br></br>
      Ingredients:
      <ul>
            <%= f.fields_for :ingredients do |ing|%>
                  <%= ing.label :name%>
                  <%= ing.text_field :name%>

                  <%= ing.label :quantity%>
                  <%= ing.text_field :quantity%>
            <br></br>
            <%end%>
      </ul>
      <%= f.submit%>
<% end %>
